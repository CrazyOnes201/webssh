<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="user" extends="struts-default">
        <!-- class="RegistAction"与applicationContext.xml中的id对应 -->
        <action name="regist" class="RegistAction">
            <result name="success">/successregister.jsp</result>
            <result name="input">/index.jsp</result>
        </action>

        <action name="login" class="LoginAction">
            <result name="success">/successlogin.jsp</result>
            <result name="input">/register.jsp</result>
        </action>

        <action name="searchticket" class="SearchTicketAction">
            <result name="success">/successlogin.jsp</result>
            <result name="input">/register.jsp</result>
        </action>

    </package>
</struts>